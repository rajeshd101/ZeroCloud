{
  "name": "zerocloud",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:compress": "vite build && node compress.js",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "dist": "vite build && electron-builder",
    "dist:win": "vite build && electron-builder --win",
    "dist:linux": "vite build && electron-builder --linux",
    "dist:mac": "vite build && electron-builder --mac",
    "compress": "node compress.js",
    "optimize": "node optimize.js",
    "clean": "node optimize.js"
  },
  "build": {
    "appId": "com.rajd.zerocloud",
    "productName": "ZeroCloud",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": [
        "zip"
      ],
      "forceCodeSigning": false,
      "cscLink": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  },
  "keywords": [],
  "author": "Raj D <drajesh@hotmail.com>",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "terser": "^5.36.0",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "express": "^5.2.1",
    "fs-extra": "^11.3.3",
    "multer": "^2.0.2",
    "multicast-dns": "^7.2.5",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  }
}
